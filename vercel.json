{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "apps/web/.next" }
    },
    {
      "src": "apps/api/dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/main" },
    { "source": "(.*)", "destination": "/index.html" }
  ]
}
